vpan(n)
  height n*1em

mpan(n)
  margin n*1em

ppan(n)
  padding n*1em

bpan(n, cl=#ddd)
  border n*1px cl solid

rpan(n)
  border-radius n*10px

for cl in colors
  .bg{cl}
    background-color unquote(cl)
  .{cl}
    color unquote(cl)
  for n in 1..pan
    .{cl}bpan{n}
      bpan(n, unquote(cl))

for n in 1..pan
  // 高度
  .vpan{n}
    vpan(n)

  // 外邊距
  .mpan{n}
    mpan(n)

  // 內邊距
  .ppan{n}
    ppan(n)

  // 邊框
  .bpan{n}
    bpan(n)

  // 圓角
  .rpan{n}
    rpan(n)

  for dir in directions
    .bpan{n}-{dir}
      border-{dir} n*1px #ddd solid

.mpan
  margin 0 1em

.ellipsis
  overflow ellipsis

.column-count
  column-count 3

.top-right
  fixed top right

.top-left
  fixed top left

.bottom-right
  fixed bottom right

.bottom-left
  fixed bottom left

.bgtransparent
  background transparent

.b
  font-weight bold

.hover:hover
  background-color #f5f5f5
